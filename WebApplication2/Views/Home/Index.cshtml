@{
    ViewData["Title"] = "Home Page";
}

<section class="promo-section text-center text-md-left">
    <div class="container">
        <div class="row align-items-center">
            <!-- Colonna di testo -->
            <div class="col-md-6">
                <h1 class="display-4">Scopri ora l'Applicazione dedicata a Personal Trainer e Palestre</h1>
                <p class="lead">Gestisci ora il tuo allenamento o quello dei tuoi clienti</p>
                <a href="#" class="btn btn-lg btn-warning text-white">Registrati Ora</a>
            </div>
            <!-- Colonna immagine -->
            <div class="col-md-6 text-center">
                <img src="/images/th.jfif" alt="Software e App per Personal Trainer e Palestre" class="img-fluid">
            </div>
        </div>
    </div>
</section>


<!-- Funzionalità Principali -->
<section id="funzioni" class="py-5">
    <div class="container text-center">
        <h2 class="mb-5 promo-card-title">Perché Sceglierci</h2>
        <div class="row py-3">
            <div class="col-md-3">
                <i class="bi bi-gear-wide-connected display-4" style="color: #f05865;"></i>
                <h5 class="mt-3">Crea Allenamenti</h5>
                <p>Pianifica allenamenti personalizzati per i tuoi clienti in pochi click.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-bar-chart-fill display-4" style="color: #f05865;"></i>
                <h5 class="mt-3">Monitora i Tuoi Progressi</h5>
                <p>Registra pesi, ripetizioni e progressi nel tempo.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-people-fill display-4" style="color: #f05865;"></i>
                <h5 class="mt-3">Gestione Clienti</h5>
                <p>Organizza le schede di allenamento dei tuoi clienti.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-people-fill display-4" style="color: #f05865;"></i>
                <h5 class="mt-3">Dimentica la Contabilità</h5>
                <p>Organizza la contabilità dei tuoi clienti.</p>
            </div>
        </div>
    </div>
</section>

<!-- Piani e Prezzi Section -->
<section id="piani">
    <div class="container text-center">
        <h2 class="mb-5 promo-card-title">Scegli il Piano Adatto a Te</h2>
        <div class="row">
            <div class="d-flex justify-content-center col-md-6">
                <div class="card mb-4 p-5">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Gratuito</h5>
                        <ul>
                            <li><i class="fas fa-check text-success me-2"></i> Accesso alle schede di allenamento</li>
                            <li><i class="fas fa-check text-success me-2"></i> Monitoraggio dei progressi</li>
                            <li><i class="fas fa-check text-success me-2"></i> Consigli di fitness settimanali</li>
                            <li><i class="fas fa-check text-success me-2"></i> Supporto via email</li>
                        </ul>
                        <a href="#" class="btn button mt-3">Scopri di più</a>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center col-md-6">
                <div class="card mb-4 p-5">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Business</h5>
                        <ul>
                            <li><i class="fas fa-check text-success me-2"></i> Accesso alle schede di allenamento</li>
                            <li><i class="fas fa-check text-success me-2"></i> Monitoraggio dei progressi</li>
                            <li><i class="fas fa-check text-success me-2"></i> Consigli di fitness settimanali</li>
                            <li><i class="fas fa-check text-success me-2"></i> Supporto via email</li>
                            <li><i class="fas fa-check text-success me-2"></i> Richiesta di Pagamento ai Clienti</li>
                            <li><i class="fas fa-check text-success me-2"></i> Contabilità dei Pagamenti per Cliente</li>
                            <li><i class="fas fa-check text-success me-2"></i> App per i Clienti per inserire le misurazioni</li>
                        </ul>
                        <a href="#" class="btn button mt-3">Scopri di più</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
